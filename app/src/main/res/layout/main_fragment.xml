<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">


            <TextView

                    android:layout_marginStart="3dp"
                    android:textAlignment="center"
                    android:padding="16dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/txt_names_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill in details"
                    android:textSize="16.8sp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_first_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:padding="4dp"


                        app:boxCornerRadiusTopStart="1dp"
                        app:boxCornerRadiusTopEnd="1dp"
                        app:boxCornerRadiusBottomStart="1dp"
                        app:boxCornerRadiusBottomEnd="1dp"

                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/colorPrimary"

                >

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            app:helperText="@string/first_name"
                            app:helperTextEnabled="true"
                            android:hint="@string/first"
                            android:inputType="textPersonName"

                            android:maxLength="10"

                    />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_last_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:padding="4dp"


                        app:boxCornerRadiusTopStart="1dp"
                        app:boxCornerRadiusTopEnd="1dp"
                        app:boxCornerRadiusBottomStart="1dp"
                        app:boxCornerRadiusBottomEnd="1dp"

                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/colorPrimary"

                >

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            app:helperText="@string/last_name"
                            app:helperTextEnabled="true"
                            android:hint="@string/last"
                            android:inputType="textPersonName"

                            android:maxLength="10"

                    />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_id"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:padding="4dp"


                        app:boxCornerRadiusTopStart="1dp"
                        app:boxCornerRadiusTopEnd="1dp"
                        app:boxCornerRadiusBottomStart="1dp"
                        app:boxCornerRadiusBottomEnd="1dp"

                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/colorPrimary"

                >

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            app:helperText="Id number"
                            app:helperTextEnabled="true"
                            android:hint="Id number"
                            android:inputType="number"

                            android:maxLength="10"

                    />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_qr"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:padding="4dp"


                        app:boxCornerRadiusTopStart="1dp"
                        app:boxCornerRadiusTopEnd="1dp"
                        app:boxCornerRadiusBottomStart="1dp"
                        app:boxCornerRadiusBottomEnd="1dp"

                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:boxStrokeWidth="1dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/colorPrimary"

                >

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_qr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            app:helperTextEnabled="true"
                            android:hint="Scan QR"
                            android:inputType="textMultiLine"


                    />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                        android:layout_marginStart="3dp"
                        android:padding="4dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/bg_gray"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView android:layout_width="70dp"
                               android:id="@+id/avatar"
                               android:src="@drawable/ic_launcher_background"
                               android:layout_height="70dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_pick_avatar"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:padding="4dp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"

                            app:boxCornerRadiusTopStart="1dp"
                            app:boxCornerRadiusTopEnd="1dp"
                            app:boxCornerRadiusBottomStart="1dp"
                            app:boxCornerRadiusBottomEnd="1dp"

                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundMode="none"
                            app:boxStrokeColor="@color/colorPrimary"

                    >

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                app:helperText="@string/take_photo"
                                app:helperTextEnabled="true"
                                android:hint="@string/take_photo"
                                android:inputType="text"



                        />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="0dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"


                        android:textColor="@color/white"
                        app:cornerRadius="5dp"
                        app:rippleColor="@color/colorPrimary"
                        android:textStyle="bold"
                        app:backgroundTint="@color/colorPrimary"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
                        android:text="Save"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>